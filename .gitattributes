*.csv filter=lfs diff=lfs merge=lfs -text
*.tsv filter=lfs diff=lfs merge=lfs -text

# Force Unix line endings for shell scripts
*.sh text eol=lf
*.sql text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
Dockerfile text eol=lf
.env text eol=lf

# Python files
*.py text eol=lf
requirements.txt text eol=lf

# Auto detect for everything else
* text=auto